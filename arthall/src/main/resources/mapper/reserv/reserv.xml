<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="reserv">

	<select id="count" parameterType="reserv.ReservVO" resultType="Integer"> 
		SELECT COUNT(*) FROM reserv
			<where>
				<!-- 홀 뭔가 안어울린다 정준아 -->
				<if test="stype != 'all' and sval != null and sval !=''" >
				 	${stype} like '%${sval}%'
				</if>
				<if test="stype == 'all' and sval != null and sval !=''" >
				 	name like '%${sval}%' OR playName like '%${sval}%' OR hallNo like '%${sval}%'
				</if>
			</where>
	</select>

	<select id="list" parameterType="reserv.ReservVO" resultType="reserv.ReservVO">
		SELECT * FROM reserv
		<where>
		<!-- 홀 뭔가 안어울린다 정준아 -->
			<if test="stype != 'all' and sval != null and sval !=''" >
				 ${stype} like '%${sval}%'
			</if>
			<if test="stype == 'all' and sval != null and sval !=''" >
			 	name like '%${sval}%' OR playName like '%${sval}%' OR hallNo like '%${sval}%'
			</if>
		</where>
		ORDER BY reservDate desc
		LIMIT #{startRow},#{size}
	</select>
	
	<delete id="delete" parameterType="reserv.ReservVO">
		DELETE FROM reserv
			WHERE no=#{no}
	</delete>
	
	
	<!-- ticket 조인.. -form 정준 -->
	<select id="ticketlist" parameterType="reserv.TicketVO" resultType="reserv.TicketVO">
		SELECT
			*
		FROM ticket
		WHERE reservNo = #{reservNo}
	</select>
	
	<insert id="reservOne" parameterType="reserv.ReservVO">
		INSERT INTO reserv
			(no, name, reservDate, playNo, playName, playDate, runtime, hallNo)
		VALUES
			(#{no}, #{name}, now(), #{playNo}, #{playName}, #{playDate},
			#{runtime}, #{hallNo});
	</insert>
	
	<select id="playAll" parameterType="play.PlayVO" resultType="play.PlayVO">
		select * from play
	</select>
	
</mapper>