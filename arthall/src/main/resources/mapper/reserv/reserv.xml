<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="reserv">

	<select id="count" parameterType="reserv.ReservVo" resultType="Integer">
		SELECT COUNT(*) FROM reserv
			<where>
				<if test="sval != null and sval !=''">
				 	title like '%${sval}%'
				</if>
			</where>
	</select>

	<select id="list" parameterType="reserv.ReservVo" resultType="reserv.ReservVo">
		SELECT * FROM reserv
			<where>
			<if test="sval != null and sval !=''">
			 	title like '%${sval}%'
			</if>
		</where>
		LIMIT #{startRow},#{size}
	</select>
	
	<delete id="delete" parameterType="reserv.ReservVo">
		DELETE FROM reserv
			WHERE no=#{no}
	</delete>
	
</mapper>